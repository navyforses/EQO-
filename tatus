[32m+[m[32mimport { execSync } from 'child_process';[m
[32m+[m[32mimport fs from 'fs';[m
[32m+[m[32mimport path from 'path';[m
[32m+[m
[32m+[m[32mconsole.log('üöÄ Building for GitHub Pages...');[m
[32m+[m
[32m+[m[32m// Build the project[m
[32m+[m[32mexecSync('npm run build', { stdio: 'inherit' });[m
[32m+[m
[32m+[m[32m// Read the built index.html[m
[32m+[m[32mconst indexPath = path.join(process.cwd(), 'dist', 'index.html');[m
[32m+[m[32mlet htmlContent = fs.readFileSync(indexPath, 'utf8');[m
[32m+[m
[32m+[m[32m// Replace relative paths with GitHub Pages paths[m
[32m+[m[32mhtmlContent = htmlContent.replace(/src="\.\//g, 'src="/EQO-/');[m
[32m+[m[32mhtmlContent = htmlContent.replace(/href="\.\//g, 'href="/EQO-/');[m
[32m+[m
[32m+[m[32m// Write back the modified index.html[m
[32m+[m[32mfs.writeFileSync(indexPath, htmlContent);[m
[32m+[m
[32m+[m[32mconsole.log('‚úÖ Build completed and optimized for GitHub Pages!');[m
[32m+[m[32mconsole.log('üìÅ Files are ready in the dist/ directory');[m
[32m+[m[32mconsole.log('üåê Deploy to GitHub Pages using: npm run deploy');[m
